{
  "watch": [
    "*.js",
    "graphql/**/*.js",
    "services/**/*.js",
    "data/**/*.js",
    "utils/**/*.js"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/**/*",
    "test/**/*",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "node index.js",
  "legacyWatch": true,
  "delay": 1000
} 